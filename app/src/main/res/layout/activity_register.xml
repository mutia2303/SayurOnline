<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/register"
                android:text="Register"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_username"
                android:src="@drawable/ic_username"
                android:layout_below="@+id/register"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_username"
                android:layout_below="@+id/register"
                android:hint="Username"
                android:textSize="15dp"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_password"
                android:src="@drawable/ic_password"
                android:layout_below="@+id/register_username"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_password"
                android:layout_below="@+id/register_username"
                android:hint="Password"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_nama"
                android:src="@drawable/ic_name"
                android:layout_below="@+id/register_password"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_name"
                android:layout_below="@+id/register_password"
                android:hint="Nama"
                android:textSize="15dp"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_nohp"
                android:src="@drawable/ic_phone"
                android:layout_below="@+id/register_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_nohp"
                android:layout_below="@+id/register_name"
                android:hint="No HP"
                android:textSize="15dp"
                android:inputType="phone"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_nohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_email"
                android:src="@drawable/ic_email"
                android:layout_below="@+id/register_nohp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_email"
                android:layout_below="@+id/register_nohp"
                android:hint="Email"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_alamat"
                android:src="@drawable/ic_address"
                android:layout_below="@+id/register_email"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/register_alamat"
                android:layout_below="@+id/register_email"
                android:hint="Alamat"
                android:textSize="15dp"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/img_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_below="@+id/register_alamat"
                android:text="Status"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <RadioGroup
                android:id="@+id/rgStatus"
                android:layout_below="@+id/textStatus"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbPembeli"
                    android:text="pembeli"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="17dp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rbPenjual"
                    android:text="penjual"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="17dp"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

            <Button
                android:id="@+id/register_button"
                android:layout_below="@id/rgStatus"
                android:padding="7dp"
                android:text="Buat Akun"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_login"
                android:layout_below="@+id/register_button"
                android:text="Sudah Memiliki Akun? \n Klik Untuk Login"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>